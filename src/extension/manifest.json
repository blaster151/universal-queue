{
  "manifest_version": 3,
  "name": "Universal Queue",
  "version": "0.1.0",
  "description": "A universal queue for managing your watchlist across streaming services",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.netflix.com/*",
    "*://*.youtube.com/*",
    "*://*.disneyplus.com/*",
    "*://*.primevideo.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.netflix.com/*",
        "*://*.youtube.com/*",
        "*://*.disneyplus.com/*",
        "*://*.primevideo.com/*"
      ],
      "js": ["content.js"]
    }
  ]
} 